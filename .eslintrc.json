{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "rules": {
    "semi": [2, "never"],
    "indent": [2, "tab"],
    "no-tabs": 0,
    "import/prefer-default-export": 0,
    "import/no-default-export":  [2]
  },
  "env": {
    "es6": true,
    "node": true,
    "jest": true
  },
  "ignorePatterns": [
    "lib/",
    "node_modules"
  ]
}
